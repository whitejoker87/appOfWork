<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
>

    <ImageView
            android:id="@+id/card_close_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_1_hover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
    />
    <ImageView
            android:id="@+id/card_close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/theme_1_card"
            app:layout_constraintStart_toStartOf="@+id/card_close_shadow"
            app:layout_constraintTop_toTopOf="@+id/card_close_shadow"
            app:layout_constraintBottom_toBottomOf="@+id/card_close_shadow"
            app:layout_constraintEnd_toEndOf="@+id/card_close_shadow"
            android:layout_margin="1dp"
    />
    <TextView
            android:id="@+id/name"
            android:text="@string/card_close_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/card_close"
            app:layout_constraintStart_toStartOf="@id/card_close"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/font_color"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eye"
            app:srcCompat="@drawable/ic_eye"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:id="@+id/newbie"
            android:text="@string/card_close_newbie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/card_close"
            app:layout_constraintEnd_toEndOf="@+id/card_close"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/font_color"
    />
    <TextView
            android:id="@+id/experienced"
            android:text="@string/card_close_experienced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/newbie"
            app:layout_constraintTop_toBottomOf="@+id/newbie"
            app:layout_constraintEnd_toEndOf="@+id/newbie"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/font_color"
    />
    <TextView
            android:id="@+id/required_competencies_headline"
            android:text="@string/card_close_required_competencies_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/card_close"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/font_color"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/experienced"/>
    <TextView
            android:id="@+id/required_competencies_text"
            android:text="@string/card_close_required_competencies_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/card_close"
            app:layout_constraintEnd_toEndOf="@+id/card_close"
            app:layout_constraintTop_toBottomOf="@+id/required_competencies_headline"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/font_color"
    />

</androidx.constraintlayout.widget.ConstraintLayout>