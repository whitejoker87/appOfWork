<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
>
    <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
    />
    <EditText
            android:id="@+id/registration_password_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/registration_01_registration_mail_2"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@id/background"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:textColor="@color/font_color"
            android:inputType="textPassword|numberPassword"
    />
    <EditText
            android:id="@+id/registration_password_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword|numberPassword"
            android:hint="@string/registration_01_registration_mail_3"
            app:layout_constraintTop_toBottomOf="@+id/registration_password_1"
            app:layout_constraintStart_toStartOf="@+id/registration_password_1"
            app:layout_constraintEnd_toEndOf="@+id/registration_password_1"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/font_color"
    />
    <EditText
            android:id="@+id/registration_password_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword|numberPassword"
            android:hint="@string/registration_01_registration_mail_4"
            app:layout_constraintTop_toBottomOf="@+id/registration_password_2"
            app:layout_constraintStart_toStartOf="@+id/registration_password_1"
            app:layout_constraintEnd_toEndOf="@+id/registration_password_1"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/font_color"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/next"
            android:text="@string/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_button"
    />
</androidx.constraintlayout.widget.ConstraintLayout>