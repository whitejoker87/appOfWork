<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	>

	<data>

		<variable
			name = "viewmodel"
			type = "ru.jobni.jobni.viewmodel.MainViewModel"
			/>

		<variable
			name = "viewmodelauth"
			type = "ru.jobni.jobni.viewmodel.AuthViewModel"
			/>

		<import type = "android.view.View"/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		>

		<ImageView
			android:id = "@+id/iv_background"
			android:layout_width = "match_parent"
			android:layout_height = "0dp"
			app:layout_constraintTop_toTopOf = "parent"
			app:layout_constraintBottom_toBottomOf = "parent"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent"
			android:layout_margin = "16dp"
			android:background = "@drawable/shape_card"
			/>

		<TextView
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toTopOf = "@+id/iv_background"
			app:layout_constraintStart_toStartOf = "@+id/iv_background"
			app:layout_constraintEnd_toEndOf = "@+id/iv_background"
			android:layout_margin = "8dp"
			android:textStyle = "bold"
			android:textColor = "@color/font_color"
			android:textSize = "14sp"
			android:text = "@string/user_auth_change_pass_text"
			/>

		<include
			android:id = "@+id/include_social_network"
			layout = "@layout/c_social_network"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toTopOf = "@+id/iv_background"
			app:layout_constraintStart_toStartOf = "@+id/iv_background"
			app:layout_constraintEnd_toEndOf = "@+id/iv_background"
			android:layout_marginTop = "36dp"
			app:viewmodel = "@{viewmodel}"
			/>

		<Button
			android:id = "@+id/btn_change_user_pass"
			android:layout_width = "180dp"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toBottomOf = "@+id/include_social_network"
			app:layout_constraintStart_toStartOf = "@+id/iv_background"
			app:layout_constraintEnd_toEndOf = "@+id/iv_background"
			android:layout_marginTop = "26dp"
			android:background = "@drawable/shape_button"
			android:text = "@string/btn_change_user_pass_text"
			/>

		<Button
			android:id = "@+id/btn_change_user_mail"
			android:layout_width = "180dp"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toBottomOf = "@+id/btn_change_user_pass"
			app:layout_constraintStart_toStartOf = "@+id/iv_background"
			app:layout_constraintEnd_toEndOf = "@+id/iv_background"
			android:layout_marginTop = "16dp"
			android:background = "@drawable/shape_button"
			android:text = "@string/btn_change_user_mail_text"
			android:onClick = '@{() -> viewmodel.setFragmentLaunch("AuthUserLoggedMail")}'
			/>

		<Button
			android:id = "@+id/btn_change_user_auth"
			android:layout_width = "180dp"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toBottomOf = "@+id/btn_change_user_mail"
			app:layout_constraintStart_toStartOf = "@+id/iv_background"
			app:layout_constraintEnd_toEndOf = "@+id/iv_background"
			android:layout_marginTop = "16dp"
			android:background = "@drawable/shape_badge"
			android:text = "@string/btn_change_user_auth_text"
			android:clickable = "false"
			/>

		<EditText
			android:id = "@+id/et_new_pass"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toBottomOf = "@+id/btn_change_user_auth"
			app:layout_constraintStart_toStartOf = "@+id/iv_background"
			app:layout_constraintEnd_toEndOf = "@id/iv_background"
			android:layout_marginTop = "26dp"
			android:layout_marginStart = "16dp"
			android:layout_marginEnd = "16dp"
			style = "@style/text_color_and_size"
			android:inputType = "textPassword|numberPassword"
			android:hint = "@string/user_auth_new_pass"
			/>

		<EditText
			android:id = "@+id/et_new_pass_confirm"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toBottomOf = "@+id/et_new_pass"
			app:layout_constraintStart_toStartOf = "@+id/et_new_pass"
			app:layout_constraintEnd_toEndOf = "@+id/et_new_pass"
			android:layout_marginTop = "16dp"
			style = "@style/text_color_and_size"
			android:inputType = "textPassword|numberPassword"
			android:hint = "@string/user_auth_new_pass_confirm"
			/>

		<Button
			android:id = "@+id/btn_change_user_pass_confirm"
			android:layout_width = "180dp"
			android:layout_height = "wrap_content"
			app:layout_constraintTop_toBottomOf = "@+id/et_new_pass_confirm"
			app:layout_constraintStart_toStartOf = "@+id/iv_background"
			app:layout_constraintEnd_toEndOf = "@+id/iv_background"
			android:layout_marginTop = "16dp"
			android:background = "@drawable/shape_button"
			android:text = "@string/btn_change_user_pass_confirm_text"
			/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>