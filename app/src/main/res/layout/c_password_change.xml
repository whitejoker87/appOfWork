<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".MainActivity">
	<ImageView android:id = "@+id/background"
		android:layout_width = "match_parent"
		android:layout_height = "0dp"
		app:layout_constraintTop_toTopOf = "parent" android:contentDescription="TODO" 
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		android:layout_margin = "16dp"
		android:background = "@drawable/shape_card"/>
	<EditText android:id = "@+id/password_1"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toTopOf = "@+id/background"
		app:layout_constraintStart_toStartOf = "@+id/background"
		app:layout_constraintEnd_toEndOf = "@id/background"
		android:layout_marginHorizontal = "16dp"
		android:layout_marginTop = "16dp"
		style = "@style/text_color_and_size"
		android:inputType = "textPassword|numberPassword"
		android:hint = "@string/password_2"/>
	<EditText android:id = "@+id/password_2"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/password_1"
		app:layout_constraintStart_toStartOf = "@+id/password_1"
		app:layout_constraintEnd_toEndOf = "@+id/password_1"
		android:layout_marginTop = "16dp"
		style = "@style/text_color_and_size"
		android:inputType = "textPassword|numberPassword"
		android:hint = "@string/password_3"/>
	<EditText android:id = "@+id/password_3"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/password_2"
		app:layout_constraintStart_toStartOf = "@+id/password_1"
		app:layout_constraintEnd_toEndOf = "@+id/password_1"
		android:layout_marginTop = "16dp"
		style = "@style/text_color_and_size"
		android:inputType = "textPassword|numberPassword"
		android:hint = "@string/password_4"/>
	<Button android:id = "@+id/password_change"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/password_3"
		app:layout_constraintStart_toStartOf = "@+id/background"
		app:layout_constraintEnd_toEndOf = "@+id/background"
		android:layout_marginTop = "16dp"
		android:background = "@drawable/shape_button"
		android:text = "@string/password_change"/>
</androidx.constraintlayout.widget.ConstraintLayout>