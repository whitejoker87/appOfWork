<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:background = "@drawable/shape_message_outgoing">
	<TextView android:id = "@+id/message"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toTopOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		android:layout_marginTop = "12dp"
		android:layout_marginHorizontal = "16dp"
		android:textColor = "@color/font_color"
		android:text = "@string/chats_message_text_big"/>
	<TextView android:id = "@+id/time"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/message"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toStartOf = "@+id/waiting_to_be_sent"
		android:layout_marginTop = "16dp"
		android:layout_marginBottom = "12dp"
		android:layout_marginEnd = "16dp"
		android:textColor = "@color/font_color"
		android:text = "@string/chats_message_time"/>
	<ImageView android:id = "@+id/waiting_to_be_sent"
		android:layout_width = "16dp"
		android:layout_height = "16dp"
		app:layout_constraintTop_toTopOf = "@+id/time"
		app:layout_constraintBottom_toBottomOf = "@+id/time"
		app:layout_constraintEnd_toStartOf = "@+id/delivered_to_server"
		android:layout_marginEnd = "16dp"
		app:srcCompat = "@drawable/ic_clock"/>
	<ImageView android:id = "@+id/delivered_to_server"
		android:layout_width = "16dp"
		android:layout_height = "16dp"
		app:layout_constraintTop_toTopOf = "@+id/time"
		app:layout_constraintBottom_toBottomOf = "@+id/time"
		app:layout_constraintEnd_toStartOf = "@+id/delivered_to_the_recipient"
		android:layout_marginEnd = "16dp"
		app:srcCompat = "@drawable/ic_check"/>
	<ImageView android:id = "@+id/delivered_to_the_recipient"
		android:layout_width = "16dp"
		android:layout_height = "16dp"
		app:layout_constraintTop_toTopOf = "@+id/time"
		app:layout_constraintBottom_toBottomOf = "@+id/time"
		app:layout_constraintEnd_toStartOf = "@+id/read_by_recipient"
		android:layout_marginEnd = "16dp"
		app:srcCompat = "@drawable/ic_check_double"/>
	<ImageView android:id = "@+id/read_by_recipient"
		android:layout_width = "16dp"
		android:layout_height = "16dp"
		app:layout_constraintTop_toTopOf = "@+id/time"
		app:layout_constraintBottom_toBottomOf = "@+id/time"
		app:layout_constraintEnd_toEndOf = "parent"
		android:layout_marginEnd = "16dp"
		android:tint = "@color/message_read"
		app:srcCompat = "@drawable/ic_check_double"/>
</androidx.constraintlayout.widget.ConstraintLayout>
